@{
    ViewData["Title"] = "Sidney's Grade Calculator";
}
@model GradeCalculatorModel;
<div class="form">
    <form method="post">
        <label>Grade Calculator: </label>
        <br />
        <label>Assignments: </label>
        <input type ="number" id="Assignments" asp-for="Assignments" value="0" />
        <br />
        <label>Quizzes: </label>
        <input type ="number" id="Quizzes" asp-for="Quizzes" value="0" />
        <br />
        <label>Group Projects: </label>
        <input type ="number" id="GroupProjects" asp-for="GroupProjects" value="0" />
        <br />
        <label>INTEX: </label>
        <input type ="number" id="Intex" asp-for="Intex" value="0" />
        <br />
        <label>Midterm Exam: </label>
        <input type ="number" id="MidExam" asp-for="MidExam" value="0" />
        <br />
        <label>Final Exam: </label>
        <input type ="number" id="FinalExam" asp-for="FinalExam" value="0" />
        <br />
        <input id="sendbtn" type="submit" name="sendbtn" value="Calculate Grade" />
        <br />
        <p id="grade"></p>
        <div asp-validation-summary="All"></div>
    </form>
</div>

